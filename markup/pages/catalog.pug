                                                +e.item
                                                    .ui.checkbox
                                                        input(type="checkbox" name="новинка" id="checkbox_7_2")
                                                        label(for="checkbox_7_2")  НОВИНКА
                                            +e.footer.card__btn 
                                                +button({text: 'Очистить', type: 'primary', mod: 'card'})
                                    
                                        .banner--box(data-sticky_column)
                                            +banner({
                                                title: 'ИНТЕРЬЕРЫ ИТАЛИИ 12- <br>ТЕСТ,ТЕСТ',
                                                remark: 'Кухни CESAR. <br>Официальный диллер'
                                            })
                                            +banner({
