                                            +e.header
                                                +e.title Фильтр
                                            +e.main
                                                - var arSection = ['Раздел','Стиль','Фабрика','Свойства','Предмет'];
                                                each section, sectionIndex in arSection
                                                    +b.filter-section
                                                        - var open = sectionIndex === 0 ? 'open' : '';
                                                        +e.header(class=open)
                                                            +e.header-text= section
                                                            +e.header-arrow!= pugHelpers.Icon.call(locals, {iconName: 'filter-arrow'})
                                                        +e.main
                                                            - var arFilter = ['Спальни','Ванные комнаты','Гостиные','Детская мебель','Кабинеты','Кухни'];
                                                            each item, index in arFilter
